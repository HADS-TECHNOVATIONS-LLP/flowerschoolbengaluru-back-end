{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "allowJs": true,
    "noEmitOnError": false,
    "paths": {
      "@shared/*": ["./shared/*"]
    }
  },
  "include": [
    "index.ts",
    "routes.ts",
    "**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "vite-setup.ts"]
}
