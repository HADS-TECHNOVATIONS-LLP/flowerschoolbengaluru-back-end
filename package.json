{
  "name": "flower-shop-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "backend": "tsx watch index.ts",
    "build": "tsc --noEmitOnError false",
    "build:force": "tsc --noEmitOnError false || true",
    "start": "node dist/index.js",
    "dev": "npm run backend",
    "prod:build": "npm run build",
    "prod:start": "NODE_ENV=production node dist/index.js",
    "deploy": "npm run build && pm2 start ecosystem.config.json",
    "restart": "pm2 restart ecommerce-backend",
    "stop": "pm2 stop ecommerce-backend",
    "logs": "pm2 logs ecommerce-backend",
    "status": "pm2 status"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "bcryptjs": "^3.0.2",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.5.1",
    "express": "^4.21.2",
    "express-fileupload": "^1.5.2",
    "express-session": "^1.18.1",
    "multer": "^2.0.2",
    "nanoid": "^5.0.4",
    "razorpay": "^2.9.6",
    "twilio": "^5.9.0",
    "ws": "^8.18.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^30.0.0",
    "@types/node": "20.16.11",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.0.2",
    "drizzle-kit": "^0.30.4",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.4",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.20"
  }
